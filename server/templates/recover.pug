extends layout

block content

    form(action="/forgot-recover" method="post")
        h1 Введите новый пароль

        .form-group
            label(for="password") Новый пароль
            input.form-control(type="password" id="password" name="password" required)

        button.btn.btn-lg.btn-primary.btn-block(type="submit") Сохранить пароль
